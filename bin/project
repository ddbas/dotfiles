#!/usr/bin/env bash

while [[ $# -gt 0 ]]; do
    case $1 in
        -d|--dev)
            # Open session for development
            DEV=true
            shift
            ;;
        -r|--replace)
            # Replace current session
            REPLACE=true
            shift
            ;;
        -*|--*)
            echo "Unknown option $1"
            exit 1
            ;;
        *)
            selected_name=$1
            shift
            ;;
    esac
done

if [[ -z $selected_name ]]; then
    selected_name=`ls -1 ~/Documents/repos | fzf`
fi

if [[ -z $selected_name ]]; then
    exit 1
fi

selected_project=~/Documents/repos/$selected_name

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -d -s $selected_name -c $selected_project
    if [[ -n $DEV ]]; then
        tmux send-keys -t $selected_name:0 hx Enter
    fi
fi

previous_session_name=`tmux display-message -p '#S'`
tmux switch-client -t $selected_name

if [[ -n $REPLACE ]]; then
    tmux kill-session -t $previous_session_name
fi
