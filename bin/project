#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected_name=$1
else
    selected_name=`ls -1 ~/Documents/Projects | fzf`
fi

if [[ -z $selected_name ]]; then
    exit 0
fi

selected_project=~/Documents/Projects/$selected_name

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -d -s $selected_name -c $selected_project
fi

tmux switch-client -t $selected_name
